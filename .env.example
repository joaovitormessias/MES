# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://mes_user:mes_password@localhost:5432/mes_renar?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="8h"

# ERP Integration
ERP_TYPE="rest" # rest | database
ERP_API_URL="http://erp.renar.local/api"
ERP_API_KEY="your-erp-api-key"
# For database type:
ERP_DB_HOST="erp-db.renar.local"
ERP_DB_PORT="1433"
ERP_DB_NAME="ERP_RENAR"
ERP_DB_USER="mes_integration"
ERP_DB_PASSWORD="your-db-password"

# Equipment Integration
OPTIMIZER_DB_TYPE="sqlserver" # sqlserver | mysql | postgresql
OPTIMIZER_DB_HOST="optimizer.renar.local"
OPTIMIZER_DB_PORT="1433"
OPTIMIZER_DB_NAME="OptimizerDB"
OPTIMIZER_DB_USER="mes_reader"
OPTIMIZER_DB_PASSWORD="your-optimizer-password"

CNC_PROTOCOL="opcua" # opcua | modbus | database
CNC_OPC_ENDPOINT="opc.tcp://cnc-server.renar.local:4840"

# Logging
LOG_LEVEL="info" # debug | info | warn | error
LOG_FILE_PATH="./logs"

# Metrics
METRICS_ENABLED="true"
METRICS_PORT="9090"

# CORS
CORS_ORIGIN="http://localhost:3001,http://mes.renar.local"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="100"

# Jobs
ERP_SYNC_CRON="*/5 * * * *" # Every 5 minutes
OEE_CALC_CRON="0 * * * *" # Every hour
SHIFT_CONSOLIDATION_CRON="0 6,14,22 * * *" # End of each shift
